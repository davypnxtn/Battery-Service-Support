@model List<RoleUsersViewModel>

@{
    ViewData["NavTitle"] = "Wijzigen Rol";
    var roleId = ViewData["roleId"];
}

    <div class="container-fluid">
        <div class="col-md-6">
            <h2>Toevoegen of verwijderen gebruikers van deze Rol</h2>

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <div class="form-check m-2">
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].UserName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label asp-for="@Model[i].IsSelected" class="form-check-label" >
                                    @Html.DisplayFor(model => Model[i].UserName)
                                </label>
                            </div>
                        }
                    
                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Annuleer</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>