@model RoleClaimsViewModel

@{
    ViewData["NavTitle"] = "Wijzigen Rol";
}

    <div class="container-fluid">
        <div class="col-md-6">
            <h2>Toevoegen of verwijderen machtigingen van deze Rol</h2>

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        @for (int i = 0; i < Model.Claims.Count(); i++)
                        {
                            <div class="form-check m-2">
                                <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                                <input type="hidden" asp-for="@Model.Claims[i].ClaimValue" />
                                <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                                <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">
                                    @Html.DisplayFor(model => Model.Claims[i].ClaimValue)
                                </label>
                            </div>
                        }

                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a asp-action="EditRole" asp-route-id="@Model.RoleId" class="btn btn-primary">Annuleer</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>