@model List<UserRolesViewModel>

    @{
        ViewData["NavTitle"] = "Wijzigen Rol";
        var userId = ViewData["userId"];
    }

    <div class="container-fluid">
        <div class="col-md-6">
            <h2>Toevoegen of verwijderen Rollen van deze gebruiker</h2>

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <div class="form-check m-2">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                                    @Html.DisplayFor(model => Model[i].RoleName)
                                </label>
                            </div>
                        }

                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Annuleer</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
