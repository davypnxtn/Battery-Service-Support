@model ViewModel.LeveradresDetailViewModel
    <table class="table table-hover">
        <thead>
            <tr class="card-text">
                <th>
                    <div class="h3 text-xl-center">
                        @Model.Leveradres.Naam<br />
                        <div class="h4">Installaties</div>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model.Installaties)
            {
                <tr data-href="/Home/Index">
                    <td>
                        <div class="card-text">
                            <div class="text-center">
                                <div class="h5">@item.InstallatieType.Naam</div>
                                Installatiecode: @item.XjoInstallatieCode
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
     </table>
    
