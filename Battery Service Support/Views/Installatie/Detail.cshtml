@model ViewModel.InstallatieDetailViewModel
@{
    ViewData["NavTitle"] = "Dashboard";
}
<div class="container-fluid">
    <div class="row">
        <div class="card border-0 shadow col-lg-3 col-md-6">
            <vc:relatie-detail id="@Model.Installatie.RelatieId"></vc:relatie-detail>
        </div>
        <div class="card border-0 shadow col-lg-2 col-md-6">
            @if (Model.Installatie.LeveradresId.HasValue)
            {
                <vc:leveradres-detail id="@Model.Installatie.LeveradresId.Value"></vc:leveradres-detail>
            }
            else
            {
                <vc:relatie-installatie id="@Model.Installatie.Relatie.Id"></vc:relatie-installatie>
            }
        </div>
        <div class="card border-0 shadow col-lg-7 col-md-12">
            <vc:installatie-detail id="@Model.Installatie.Id"></vc:installatie-detail>
        </div>
    </div>
</div>